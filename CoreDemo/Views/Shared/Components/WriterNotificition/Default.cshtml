@*Yazar bildirimleri için yapılan viewcomponent*@
@using EntityLayer.Concrete
@model List<Notificition>
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
    <h6 class="p-3 mb-0">Notifications</h6>
    @foreach (var item in Model)
    {

        <div class="dropdown-divider"></div>
        <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <div class="@item.NotificitionColor">
                    <i class="@item.NotificitionTypeSymbol"></i>
                </div>
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject font-weight-normal mb-1">@item.NotificitionType</h6>
                <p class="text-gray ellipsis mb-0"> @item.NotificitionDetails </p>
            </div>
        </a>
    }

    <div class="dropdown-divider"></div>
    <h6 class="p-3 mb-0 text-center">See all Notifications</h6>
</div>